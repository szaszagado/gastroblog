<section class="px-2 py-2 my-2 text-center">
  <img src="/img/publish-recipe.png" class="d-block mx-auto mb-4 img-fluid" alt="" width="566" height="208" loading="lazy">
  <h1 class="display-5 fw-bold">Recept beküldése</h1>
  <div class="col-lg-6 mx-auto">
    <p class="lead mb-4">Saját recept beküldése</p>
  </div>
</section>

