<div class="px-4 py-5 my-5 text-center">
  <h1 class="display-5 fw-bold">Recept beküldése</h1>
  <div class="col-lg-6 mx-auto">
    <p class="lead">Saját recept beküldése</p>
  </div>
</div>


<div class="row justify-content-center">

  <div class="col-8">

    <% if(infoSubmitObj != '') { %>
      <div class="col-12 alert alert-success" role="alert">
        <%= infoSubmitObj %>
      </div>
    <% } %>
    
    <% if(infoErrorsObj != '') { %>
      <div class="col-12 alert alert-danger" role="alert">
        <%= infoErrorsObj[0].message %>
      </div>
    <% } %>

    <form action="/send-recipe" enctype="multipart/form-data" method="POST">
    
      <div class="row g-3">

          <div class="col-12">
              <label for="sendername" class="form-label">Beküldő neve</label>
              <input type="text" name="sendername" id="sendername" class="form-control" required>
          </div>

          <div class="col-12">
              <label for="senderemail" class="form-label">Beküldő email címe</label>
              <input type="email" name="senderemail" id="senderemail" class="form-control" required>
          </div>

        <div class="col-12">
          <label for="name" class="form-label">Recept Megnevezése</label>
          <input type="text" name="name" id="name" class="form-control" required>
        </div>
        
        <div class="col-12">
          <label for="description" class="form-label">Elkészítés</label>
          <textarea name="description" id="description" class="form-control" cols="30" rows="4" required></textarea>
        </div>

      
        <div class="container row">
          <div class="ingredientList row">
            <div class="ingredeintDiv mb-1 row">
              <div class="col-md-2">
                <label for="quantityList">Mennyiség</label>
                <div class="quantityList">
                  <div class="quantityDiv mb-1">
                    <input type="text" name="quantity" class="form-control" required>
                  </div>
                </div>
              </div>


              <div class="col-md-10">
                <label for="ingredientList">Hozzávalók</label>
                    <input type="text" name="ingredients" class="form-control" required>
              </div>
            </div>
          </div>
          </div>
        

        <div class="col-12">
          <button type="button" class="btn btn-outline-primary" id="addIngredientsBtn">+ Hozzávaló</button>
        </div>

        <div class="col-12">
          <label for="category">Kategória kiválasztása</label>
          <select class="form-select form-control" name="category" aria-label="Category">
            <option selected>Kategória kiválasztása</option>
            <option value="Thai">Thai</option>
            <option value="Olasz">Olasz</option>
            <option value="Angol">Angol</option>
          </select>
        </div>

        <div class="col-12">
          <label for="image">Kép az ételről</label>
          <input type="file" class="form-control" name="image" accept="image/*">
        </div>

        <div class="col-12">
          <input type="submit" class="submit" value="Recept Elküldése">
        </div>


        <script src="/public/js/send.js"></script>
      </div>
    
    </form>

  </div>
</div>

